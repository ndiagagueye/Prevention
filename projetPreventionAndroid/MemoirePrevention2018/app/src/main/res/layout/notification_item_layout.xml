<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_input_simple"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="10dp"
    android:id="@+id/main_linear_container"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_marginTop="9dp"
        android:paddingBottom="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/notif_image"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="5dp"
            android:src="@drawable/send_alerte"/>


        <TextView
            android:id="@+id/notif_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="12sp"
            style="@style/font_text_normal"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Type de notifications "
            />

    </LinearLayout>

    <TextView
        android:id="@+id/notif_name"
        style="@style/font_text_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="15dp"
        android:text="username"
        android:textColor="@color/colorAccentDark" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/notif_name"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_notif_date"
            style="@style/font_text_bold"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:text="date "
            android:textColor="@color/colorAccentDark" />
        <TextView
            android:id="@+id/tv_notif_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date "
            android:layout_gravity="center"
            style="@style/font_text_normal"
            android:textSize="12sp" />


    </LinearLayout>

    <include layout="@layout/item_divider"
        android:layout_marginTop="78dp"
        android:layout_height="1dp"
        android:layout_width="wrap_content"
        />



</RelativeLayout>