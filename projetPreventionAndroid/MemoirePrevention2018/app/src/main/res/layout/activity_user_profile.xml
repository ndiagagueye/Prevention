<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background ="@drawable/background_right"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image_circle"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:elevation="1dp"
                    android:src="@drawable/back"
                    android:layout_centerHorizontal="true"
                    />
                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/take_a_picture"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:clickable="true"
                    android:visibility="gone"
                    android:layout_marginTop="60dp"
                    android:layout_gravity="center"
                    android:layout_alignEnd="@+id/profile_image_circle"
                    android:layout_alignBottom="@+id/profile_image_circle"
                    android:layout_marginLeft="140dp"

                    app:srcCompat="@drawable/ic_take_a_picture" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="85dp"
                    android:background="#fff"
                    >
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:contentPaddingTop="15dp"
                        app:contentPaddingRight="15dp"
                        android:background="#fff"
                        app:contentPaddingBottom="15dp"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/profile_username"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="80dp"
                                android:text="Ndiaga Gueye"
                                android:textStyle="bold"
                                android:textSize="25sp"
                                android:textColor="#212121"
                                android:fontFamily="@font/fira_sans"
                                android:layout_gravity="center"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:cursorVisible="false"
                                />

                            <TextView
                                android:id="@+id/status_user_profile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:textColor="#212121"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                                android:text="J'utilise mon application pour me proteger contre les incidents"
                                android:fontFamily="@font/fira_sans"
                                android:textSize="18sp"
                                />

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/btn_edit_profile"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    app:srcCompat="@mipmap/ic_edit_profile" />
                                <ImageView
                                    android:id="@+id/btn_save_info"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone"
                                    android:layout_gravity="center_horizontal"
                                    app:srcCompat="@mipmap/ic_ok" />
                            </FrameLayout>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:weightSum="2"
                        android:layout_marginTop="20dp">

                        <RelativeLayout
                            android:id="@+id/view_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:padding="12dp">

                            <ImageView
                                android:id="@+id/icon1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="12dp"
                                android:layout_marginRight="12dp"
                                android:src="@mipmap/ic_phone" />

                            <EditText
                                android:id="@+id/profile_telephone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:layout_marginStart="12dp"
                                android:layout_toEndOf="@id/icon1"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/icon1"
                                android:text="Téléphone"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="#212121"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:cursorVisible="false"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/view_adresse"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:padding="12dp">

                            <ImageView
                                android:id="@+id/icon3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="12dp"
                                android:layout_marginRight="12dp"
                                android:src="@mipmap/ic_phone" />

                            <EditText
                                android:id="@+id/profile_user_contact_here"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:layout_marginStart="12dp"
                                android:layout_toEndOf="@id/icon3"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/icon3"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="Personne à contacter"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="#212121"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:cursorVisible="false"/>

                        </RelativeLayout>

                        <CheckBox
                            android:id="@+id/isbenevol"
                            android:layout_width="match_parent"
                            android:layout_marginTop="20dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="20dp"
                            android:layout_below="@+id/profile_user_contact_here"
                            android:layout_height="wrap_content"
                            android:text="Benevol" />

                        <Spinner
                            android:id="@+id/spinner_type_user"
                            android:layout_width="300dp"
                            android:visibility="gone"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="50dp">

                        </Spinner>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:id="@+id/invite_friend_btn"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textAllCaps="false"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:textAlignment="center"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/backgroun_btn_profile"
                    style="@style/font_text_normal"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:drawableLeft="@drawable/invit"
                    android:text="Inviter mes proches"
                    tools:ignore="RtlCompat" />

                <Button
                    android:id="@+id/urgence_call_btn"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textAllCaps="false"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:textAlignment="center"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/backgroun_btn_profile"
                    style="@style/font_text_normal"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#212121"
                    android:drawableLeft="@mipmap/ic_urgence_call"
                    android:text="Appel d'urgence"
                    tools:ignore="RtlCompat" />
                <!--   <Button
                       android:layout_width="match_parent"
                       android:layout_height="60dp"
                       android:textAllCaps="false"
                       android:layout_gravity="center_horizontal"
                       android:layout_marginTop="15dp"
                       android:layout_marginLeft="15dp"
                       android:textAlignment="textStart"
                       android:layout_marginRight="15dp"
                       android:background="@color/colorPrimary"
                       style="@style/font_text_normal"
                       android:textSize="20dp"
                       android:textColor="#4ad24d"
                       android:drawableLeft="@mipmap/ic_help_profile"
                       android:text="Comment ça fonctionne"
                       tools:ignore="RtlCompat" />-->

            </LinearLayout>

        </LinearLayout>




    </RelativeLayout>

</ScrollView>