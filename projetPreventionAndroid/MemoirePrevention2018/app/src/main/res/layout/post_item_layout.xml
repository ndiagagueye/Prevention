<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/background_input_simple">

    <LinearLayout
        android:id="@+id/post_ll_first"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:background="@drawable/background_input_simple">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal"
            android:padding="2dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/blog_user_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:src="@drawable/partager" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                >

                <TextView
                    android:id="@+id/blog_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/font_text_bold"
                    android:textColor="@color/colorAccentDark"
                    android:text="Username" />

                <TextView
                    android:id="@+id/post_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/font_text_normal"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="type of pub" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/blog_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/font_text_normal"
                    android:textColor="@color/colorAccentDark"
                    android:textSize="12sp"
                    android:textAlignment="textEnd"
                    android:text="25 sept 2018 " />

                <TextView
                    android:id="@+id/blog_time_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/font_text_bold"
                    android:layout_gravity="right"
                    android:textSize="13sp"
                    android:layout_marginRight="5dp"
                    android:text="date" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/blog_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:scaleType="centerCrop"
            android:background="@drawable/background_post_image"
            android:src="@drawable/agresion_couteau" />


        <TextView
            android:id="@+id/blog_desc"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Deux agresseurs m'ont attaquÃ©s hier nuit ... "
            android:layout_marginTop="2dp"
            android:background="#FBFFEE"
            android:textColor="@color/colorPrimaryDark"
            style="@style/font_text_bold"
            android:textSize="15sp"
            />

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"
                >

                <ImageView
                    android:id="@+id/blog_like_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_like_red"

                    />

                <TextView
                    android:id="@+id/blog_lke_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="0 "
                    android:textSize="14sp"
                    style="@style/font_text_bold"
                    android:textColor="@color/colorPrimaryDark"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                >
                <TextView
                    android:id="@+id/post_tv_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:textColor="@color/colorAccentDark"
                    style="@style/font_text_bold"
                    android:text="plus  "
                    />
                <ImageView
                    android:id="@+id/post_iv_more_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_more_about_accent"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="2dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true">
                <ImageView
                    android:id="@+id/blog_comment_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_comment_light" />

                <TextView
                    android:id="@+id/comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    style="@style/font_text_bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="0  "
                    />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>








</android.support.v7.widget.CardView>