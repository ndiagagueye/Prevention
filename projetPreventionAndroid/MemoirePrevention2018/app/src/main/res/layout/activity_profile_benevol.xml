<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gueye.memoireprevention2018.activities.ProfileBenevolActivity">

    <include layout="@layout/app_bar_layout"
        android:id="@+id/profile_benevol_toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/profile_benevol_toolbar">
        <View
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background ="@drawable/background_right"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/benevol_image"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:elevation="1dp"
                    android:src="@drawable/back"
                    android:layout_centerHorizontal="true"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="85dp"
                    android:background="#fff"
                    >
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:contentPaddingTop="15dp"
                        app:contentPaddingRight="15dp"
                        android:background="#fff"
                        app:contentPaddingBottom="15dp"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/benevol_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="80dp"
                                android:text="Ndiaga Gueye"
                                android:textStyle="bold"
                                android:textSize="25sp"
                                android:textColor="#212121"
                                android:fontFamily="@font/fira_sans"
                                android:layout_gravity="center"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:cursorVisible="false"
                                />



                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            </FrameLayout>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:weightSum="2"
                        android:layout_marginTop="20dp">

                        <RelativeLayout
                            android:id="@+id/view_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:padding="12dp">

                            <ImageView
                                android:id="@+id/icon1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="12dp"
                                android:layout_marginRight="12dp"
                                android:src="@mipmap/ic_phone" />

                            <TextView
                                android:id="@+id/benevol_telephone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:layout_marginStart="12dp"
                                android:layout_toEndOf="@id/icon1"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/icon1"
                                android:text="Téléphone"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="#212121"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:cursorVisible="false"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/vieew_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:padding="12dp">

                            <ImageView
                                android:id="@+id/icon2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="12dp"
                                android:layout_marginRight="12dp"
                                android:src="@mipmap/ic_phone" />

                            <TextView
                                android:id="@+id/type_benevol"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:layout_marginStart="12dp"
                                android:layout_toEndOf="@id/icon2"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/icon2"
                                android:text="Téléphone"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="#212121"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:cursorVisible="false"/>
                        </RelativeLayout>

                        <Button
                            android:id="@+id/benevol_contacter"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="bottom"
                            android:text="Conatcter"
                            style="@style/font_text_bold"
                            android:textColor="@color/colorLightDark"
                            android:background="@drawable/backgroun_btn_profile"
                            />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
